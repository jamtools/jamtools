{
  "name": "jamtools",
  "version": "1.0.0",
  "description": "",
  "main": "index.js",
  "packageManager": "npm@10.2.4",
  "scripts": {
    "start": "turbo run start",
    "build": "turbo run build",
    "dev": "turbo run dev",
    "dev-without-node": "turbo run dev --filter=\"!./apps/jamtools/node\"",
    "debug-node": "npm run debug --prefix apps/jamtools/node",
    "test": "turbo run test",
    "ci": "turbo run lint check-types build test --output-logs errors-only",
    "heroku-postbuild": "npm i -g turbo && NODE_ENV=development npm i && NODE_ENV=production npm run build"
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "devDependencies": {
    "esbuild": "^0.23.0",
    "nodemon": "^3.1.4",
    "npm-run-all": "^4.1.5",
    "turbo": "^2.0.6"
  },
  "workspaces": [
    "apps/jamtools/*",
    "packages/jamtools/core",
    "packages/jamtools/features",
    "packages/jamtools/platforms/*",
    "packages/*",
    "configs"
  ]
}
