{
  "name": "jamtools-server",
  "scripts": {
    "start": "node dist/local-server.js",
    "build:watch": "nodemon dist/local-server.js",
    "run:watch": "npm run build-local-server -- --watch",
    "dev": "npm-run-all --parallel build:watch run:watch",
    "build": "npm run build-local-server",
    "build-local-server": "esbuild src/entrypoints/local-server.entrypoint.ts --outfile=dist/local-server.js --bundle --platform=node --external:better-sqlite3",
    "check-types": "tsc --noEmit",
    "lint": "eslint --ext ts --ext tsx src/",
    "fix": "npm run lint -- --fix"
  },
  "dependencies": {
    "express": "^4.19.2",
    "express-ws": "^5.0.2",
    "jamtools-core": "*"
  },
  "devDependencies": {
    "@types/express": "^4.17.21",
    "@types/express-ws": "^3.0.5",
    "configs": "*"
  },
  "config": {
    "dir": "../../../configs"
  }
}
