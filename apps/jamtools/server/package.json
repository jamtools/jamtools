{
  "name": "jamtools-server",
  "scripts": {
    "build:watch": "nodemon dist/local-server.js",
    "run:watch": "npm run build-local-server -- --watch",
    "dev": "npm-run-all --parallel build:watch run:watch",
    "build": "npm run build-local-server",
    "build-local-server": "esbuild src/entrypoints/local-server.entrypoint.ts --outfile=dist/local-server.js --bundle --platform=node",
    "check-types": "tsc --noEmit",
    "lint": "eslint --ext ts --ext tsx src/",
    "fix": "npm run lint -- --fix"
  },
  "dependencies": {
    "@opentelemetry/api": "^1.9.0",
    "@opentelemetry/auto-instrumentations-node": "^0.48.0",
    "@opentelemetry/exporter-trace-otlp-http": "^0.52.1",
    "@opentelemetry/sdk-node": "^0.52.1",
    "express": "^4.19.2",
    "express-async-errors": "^3.1.1",
    "jamtools-core": "*"
  },
  "devDependencies": {
    "@babel/cli": "^7.24.8",
    "@babel/core": "^7.24.9",
    "@babel/generator": "^7.24.10",
    "@babel/parser": "^7.24.8",
    "@babel/plugin-syntax-typescript": "^7.24.7",
    "@babel/preset-typescript": "^7.24.7",
    "@babel/traverse": "^7.24.8",
    "@types/express": "^4.17.21",
    "configs": "*",
    "source-map-support": "^0.5.21"
  },
  "config": {
    "dir": "../../../configs"
  }
}
