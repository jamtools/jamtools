{
  "name": "@acme/app-tauri",
  "private": true,
  "version": "0.1.0",
  "type": "module",
  "scripts": {
    "dev": "tauri dev",
    "build": "tauri build",
    "build-pkg": "pkg ../../dist/tauri/node/dist/index.js --out-path ./src-tauri/binaries --config pkg.json",
    "build-pkg-small": "pkg ./local-server.js --out-path ./src-tauri/binaries",
    "build-dist": "npm run build-pkg -- --targets node20-linux-x64",
    "build-linux": "npm run build-pkg -- --targets node20-linux-x64,node20-linux-arm64",
    "build-macos": "npm run build-pkg -- --targets node20-macos-arm64 && mv src-tauri/binaries/index src-tauri/binaries/local-server-aarch64-apple-darwin"
  },
  "dependencies": {
    "@tauri-apps/api": "^2.2.0",
    "@tauri-apps/plugin-dialog": "~2.0.1",
    "@tauri-apps/plugin-fs": "~2.2.0",
    "@tauri-apps/plugin-shell": "^2"
  },
  "devDependencies": {
    "@tauri-apps/cli": "^2",
    "@yao-pkg/pkg": "^6.1.1",
    "typescript": "^5.2.2",
    "vite": "^5.3.1"
  }
}
